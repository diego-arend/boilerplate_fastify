# ==============================================
# LOCAL DEVELOPMENT ENVIRONMENT CONFIGURATION
# ==============================================

NODE_ENV=development
PORT=3001

# ==============================================
# SECURITY CONFIGURATION
# ==============================================

JWT_SECRET=your-super-secret-jwt-key-here-must-be-at-least-32-chars

# ==============================================
# DATABASE CONFIGURATION (Local)
# ==============================================

MONGO_URI=mongodb://admin:password@localhost:27017/boilerplate?authSource=admin

# ==============================================
# CACHE CONFIGURATION (Local)
# ==============================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==============================================
# EMAIL CONFIGURATION (Local MailHog)
# ==============================================

SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@boilerplate.com
EMAIL_TLS_REJECT_UNAUTHORIZED=false

# ==============================================
# OPTIONAL CONFIGURATIONS
# ==============================================

LOG_LEVEL=info
CORS_ALLOW_CREDENTIALS=false
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000