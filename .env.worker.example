# ==============================================
# WORKER ENVIRONMENT CONFIGURATION TEMPLATE
# ==============================================
# 
# Copy this file to:
# - .env.worker.development (for development)
# - .env.worker.production (for production)
#
# ==============================================

# Environment (required: 'development', 'production', or 'test')
NODE_ENV=development

# Server Configuration (worker health check port)
PORT=3003

# Worker Mode (ALWAYS true for worker containers)
WORKER_MODE=true

# Worker Configuration
WORKER_CONCURRENCY=5
WORKER_BATCH_SIZE=50
WORKER_PROCESSING_INTERVAL=5000
QUEUE_NAME=app-queue

# ==============================================
# SECURITY CONFIGURATION
# ==============================================

# JWT Secret (required: minimum 32 characters for security)
# Generate a strong random string for production!
JWT_SECRET=your-super-secret-jwt-key-here-must-be-at-least-32-chars

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# MongoDB Configuration (required)
MONGO_URI=mongodb://admin:password@localhost:27017/boilerplate?authSource=admin

# ==============================================
# CACHE CONFIGURATION
# ==============================================

# Redis Configuration (required for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Queue Redis Configuration (required for job processing)
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_PASSWORD=
QUEUE_REDIS_DB=1

# ==============================================
# EMAIL CONFIGURATION
# ==============================================

# SMTP Email Configuration (required for sending emails from jobs)
# For development, you can use Mailpit (mailpit service)

# SMTP Server Settings
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Your App Name

# ==============================================
# OPTIONAL CONFIGURATIONS
# ==============================================

# Logging Level
LOG_LEVEL=info