{
  "name": "boilerplate_fastify",
  "version": "1.0.0",
  "description": "Boilerplate Fastify App",
  "type": "module",
  "author": "DFA",
  "license": "ISC",
  "packageManager": "pnpm@10.13.1",
  "scripts": {
    "dev": "tsx --watch src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc",
    "worker": "node dist/infraestructure/workers/index.js",
    "worker:dev": "tsx --watch src/infraestructure/workers/index.ts",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:prod": "docker-compose up --build",
    "docker:prod:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f app",
    "docker:logs:worker": "docker-compose logs -f worker",
    "docker:logs:all": "docker-compose logs -f",
    "docker:build": "docker build -t boilerplate-fastify -f Dockerfile.api .",
    "docker:build:worker": "docker build -f Dockerfile.worker -t boilerplate-worker .",
    "docker:ps": "docker-compose ps",
    "docker:restart": "docker-compose restart",
    "docker:restart:api": "docker-compose restart app",
    "docker:restart:workers": "docker-compose restart worker",
    "lint": "eslint src/ --ext .ts,.js",
    "lint:fix": "eslint src/ --ext .ts,.js --fix",
    "lint:check": "eslint src/ --ext .ts,.js --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "format:all": "prettier --write \"**/*.{ts,js,json,md,yml,yaml}\" --ignore-path .prettierignore",
    "code:check": "pnpm format:check && pnpm lint:check",
    "code:fix": "pnpm format && pnpm lint:fix"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.899.0",
    "@aws-sdk/s3-request-presigner": "^3.899.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/multipart": "^9.2.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.58.7",
    "dotenv": "^17.2.1",
    "fastify": "^5.5.0",
    "fastify-plugin": "^5.0.1",
    "ioredis": "^5.8.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.1",
    "nodemailer": "^7.0.6",
    "pg": "^8.16.3",
    "pino": "^9.11.0",
    "pino-pretty": "^13.0.0",
    "redis": "^5.8.2",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.27",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.0",
    "@types/nodemailer": "^7.0.1",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-unicorn": "^61.0.2",
    "prettier": "^3.6.2",
    "tsx": "^4.19.1",
    "typescript": "^5.9.2"
  }
}
